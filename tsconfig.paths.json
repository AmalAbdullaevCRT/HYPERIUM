{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@styles": ["packages/styles"],
      "@styles/*": ["packages/styles/*"],

      "@components": ["packages/components"],
      "@components/*": ["packages/components/*"],

      "@hooks": ["packages/hooks"],
      "@hooks/*": ["packages/hooks/*"],

      "@utils": ["packages/utils"],
      "@utils/*": ["packages/utils/*"],

      "@ts": ["packages/types"],
      "@ts/*": ["packages/types/*"],

      "@store": ["redux"],
      "@store/*": ["redux/*"]
    }
  }
}
